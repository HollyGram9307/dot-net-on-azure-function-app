{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "minLength": 1
    },
    "storageName": {
      "type": "string",
      "minLength": 1
    },
    "templateLinkBase": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "https://raw.githubusercontent.com/mathieu-benoit/dot-net-on-azure-function-app/master/infra/templates/"
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "functionapp",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateLinkBase'), 'FunctionApp.json')]"
        },
        "parameters": {
          "webAppName": {
            "value": "[parameters('webAppName')]"
          },
          "storageName": {
            "value": "[parameters('storageName')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "functionKey": {
      "type": "string",
      "value": "[reference('functionapp').outputs.functionKey]"
    },
    "functionUrl": {
      "type": "string",
      "value": "[reference('functionapp').outputs.functionUrl]"
    }
  }
}