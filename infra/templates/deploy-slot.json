{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[resourceGroup().name]"
    },
    "slotName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "staging"
    },
    "storageName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[resourceGroup().name]"
    },
    "appInsightsName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "[concat(resourceGroup().name, '-', parameters('slotName'))]"
    },
    "templateLinkBase": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "https://raw.githubusercontent.com/mathieu-benoit/dot-net-on-azure-function-app/master/infra/templates/"
    }
  },
  "variables": {
    "applicationInsightsDeploymentName": "[concat(deployment().name, '-applicationInsightsSlot')]",
    "functionAppDeploymentName": "[concat(deployment().name, '-functionAppSlot')]"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "[variables('applicationInsightsDeploymentName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateLinkBase'), 'nested/ApplicationInsights.json')]"
        },
        "parameters": {
          "appInsightsName": {
            "value": "[parameters('appInsightsName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "[variables('functionAppDeploymentName')]",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', variables('applicationInsightsDeploymentName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('templateLinkBase'), 'nested/FunctionAppSlot.json')]"
        },
        "parameters": {
          "functionAppName": {
            "value": "[parameters('functionAppName')]"
          },
          "slotName": {
            "value": "[parameters('slotName')]"
          },
          "storageName": {
            "value": "[parameters('storageName')]"
          },
          "applicationInsightsInstrumentationKey": {
            "value": "[reference('applicationInsights').outputs.instrumentationKey.value]"
          }
        }
      }
    }
  ],
  "outputs": {}
}